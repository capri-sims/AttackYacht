<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="@drawable/menuart" >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two Player"
        android:id="@+id/button_menu_twoPlayer"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:onClick="onClickTwoPlayer"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/button_menu_options"
        android:onClick="onClickOptions"
        android:layout_below="@+id/button_menu_twoPlayer"
        android:layout_alignRight="@+id/button_menu_twoPlayer"
        android:layout_alignEnd="@+id/button_menu_twoPlayer"
        android:layout_marginTop="26dp"
        android:layout_alignLeft="@+id/button_menu_twoPlayer"
        android:layout_alignStart="@+id/button_menu_twoPlayer" />

</RelativeLayout>
